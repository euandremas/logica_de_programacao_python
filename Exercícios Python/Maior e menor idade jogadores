for i in range(1, 7):
    idade = int(input(f"Digite a idade do {i}º jogador: "))  # Corrigido: f-string sem .format()
    
    if i == 1:
        # Inicializa com os dados do primeiro jogador
        maiorIdade = idade
        menorIdade = idade
        jogadorMaisVelho = i
        jogadorMaisNovo = i
    else:
        # Compara e atualiza se necessário
        if idade > maiorIdade:
            maiorIdade = idade
            jogadorMaisVelho = i
        if idade < menorIdade:
            menorIdade = idade
            jogadorMaisNovo = i

# Exibe o resultado após o loop
print(f"A maior idade é {maiorIdade} e esse é o jogador {jogadorMaisVelho}, " f"e a menor idade é {menorIdade}, e esse é o jogador {jogadorMaisNovo}.")
